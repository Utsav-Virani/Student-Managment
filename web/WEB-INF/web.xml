    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>del_rec</servlet-name>
        <url-pattern>/del_rec_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>file_upload</servlet-name>
        <url-pattern>/file_upload_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mark_attendance</servlet-name>
        <url-pattern>/mark_attendance_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>f_dashboard</servlet-name>
        <url-pattern>/f_dashboard_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/DownloadServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
